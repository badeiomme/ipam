@page "{handler?}"
@model DeviceModel

<style>
    .hide-delete {
        visibility: hidden;
    }
    .hide-delete:hover {
        visibility: visible;
    }
</style>

<h3>Device Types:</h3>
<div class="row">
    <div class="col-lg-4">
        <ul class="list-group">
            @foreach (var dev in Model.Db.Data.DeviceTypes)
            {
                <li class="list-group-item">
                    @dev <button class="badge hide-delete">Delete</button>
                </li>
            }
        </ul>
    </div>
</div>


<form class="form-horizontal" method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Enter new device type..." asp-for="NewDevice.Device">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default" asp-page-handler="AddDevice">Add</button>
                </span>
            </div>
            <span asp-validation-for="NewDevice.Device" class="text-danger"></span>
        </div>
    </div>
</form>
